{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rootDirs": [
      "src",
      "test"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "App.tsx",
    "index.tsx",
    "declarations.d.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}